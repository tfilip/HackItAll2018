<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.shaii.hackitall2018.ClientMainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        app:contentPaddingBottom="0dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/mancareDefault"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:contentDescription="CardImageViewDesc"
                android:text="+1"
                android:textColor="#FFE082"
                android:textSize="45sp"
                android:scaleType="centerCrop"
                android:backgroundTint="#FF8F00"
                />

            <TextView
                android:id="@+id/Restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/mancareDefault"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:paddingStart="40dp"
                android:paddingTop="30dp"
                android:text="Pub 18"
                android:textSize="30sp"
                android:textStyle="bold" />





        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
